{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@testing-library/jest-dom",
      "@types/node"
    ],
    "lib": [
      "es2017",
      "es6",
      "dom"
    ],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "features/*": [
        "src/features/*"
      ],
      "entities/*": [
        "src/entities/*"
      ],
      "shared/*": [
        "src/shared/*"
      ],
      "widgets/*": [
        "src/widgets/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "app/*": [
        "src/app/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node",
      "allowJs": false,
      "esModuleInterop": true
    }
  },
  "include": [
    "src",
    "./config/jest/setupTests.ts",
    "./src/app/types/global.d.ts",
    "./src/app/types/typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
