{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@testing-library/jest-dom",
      "@types/node",
      "vite-plugin-svgr/client"
    ],
    "lib": [
      "es2017",
      "es6",
      "dom"
    ],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      //      "@/*": [
      //        "./src/*"
      //      ],
      "@/widgets/*": [
        "./src/widgets/*"
      ],
      "@/entities/*": [
        "./src/entities/*"
      ],
      "@/pages/*": [
        "./src/pages/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/app/*": [
        "./src/app/*"
      ]
    },
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node",
      "allowJs": false,
      "esModuleInterop": true
    }
  },
  "include": [
    "src",
    "./config/jest/setupTests.ts",
    "./src/app/types/global.d.ts",
    "./src/app/types/typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
